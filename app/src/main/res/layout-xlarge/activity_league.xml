<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"/>

    <ImageView
            android:src="@drawable/swooshlogo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter" android:contentDescription="@string/swoosh_logo"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/imageView8"/>

    <TextView
            android:text="@string/desired_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.501" android:textColor="@android:color/white"
            android:textSize="36sp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:id="@+id/linearLayout"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp">
        <ToggleButton
                android:text="@string/mens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mensLeagueBtn"
                android:textColor="@android:color/white" android:textOff="@string/mens" android:textOn="@string/mens"
                android:background="@drawable/swoosh_toggle" android:textSize="36sp" android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp" android:onClick="onMensClicked"/>
        <ToggleButton
                android:text="@string/womens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/womensLeagueBtn" android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp" android:textColor="@android:color/white"
                android:textOff="@string/womens"
                android:textOn="@string/womens" android:background="@drawable/swoosh_toggle" android:textSize="36sp"
                android:layout_marginLeft="32dp" android:layout_marginRight="32dp" android:onClick="onWomensClicked"/>
        <ToggleButton
                android:text="@string/co_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/coedLeagueBtn"
                android:textColor="@android:color/white" android:textOff="@string/co_ed" android:textOn="@string/co_ed"
                android:background="@drawable/swoosh_toggle" android:textSize="36sp" android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp" android:onClick="onCoedClicked"/>

    </LinearLayout>
    <Button
            android:text="@string/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="36sp"
            android:background="@drawable/swoosh_button" android:textColor="@android:color/white"
            android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
            android:onClick="leagueNextClicked"
            android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>